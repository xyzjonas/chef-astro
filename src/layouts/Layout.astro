--- 
import { ViewTransitions } from 'astro:transitions';

interface Props {
    title: string;
    image?: string;
}

const { image, title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description">
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk&display=swap" rel="stylesheet">
        
        <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">

        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta property="og:image" content={image} />
        <ViewTransitions />
    </head>
    <body>
        <nav class="top-navbar">
            <a id="theme-toggle"><span class="material-icons">lightbulb</span></a>
        </nav>
        <slot />
    </body>
</html>

<script is:inline>
    const storedTheme = localStorage.getItem('theme') || (window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");
    if (storedTheme)
        document.documentElement.setAttribute('data-theme', storedTheme)
</script>

<script>
    document.getElementById('theme-toggle')?.addEventListener('click', () => {
        const html = document.documentElement;
        const theme = html.getAttribute("data-theme") === "dark" ? "light" : "dark"
        html.setAttribute("data-theme", theme)
        localStorage.setItem("theme", theme)
    })
</script>

<style is:global lang="scss">

    :root, html[data-theme="light"] {
        --accent: rgb(211, 84, 89);

        --background: rgb(230, 230, 230);
        --foreground: #f9f9f9;
        --font-color: #454444;
        --font-color-inv: white;
        --border-color: #7f7d7d96;
        --success-color: #57cc99;
        --danger-color: #d62828;
    }

    html[data-theme="dark"] {
        --accent: rgb(211, 84, 89);
        --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
        
        --background: #13151A;
        --font-color: #e5ebeb;
        --foreground: #232428;
        --font-color-inv: #454444;
        --border-color: #7f7d7d96;
    }

    html {
        font-family: system-ui, sans-serif;
        font-family: 'Space Grotesk', sans-serif;
    }
    body {
        margin: 0;
        background: var(--background);
        color: var(--font-color);

        position: absolute;
        inset: 0;
        
        &::-webkit-scrollbar {
            width: 0.2em;
            margin-right: 1em;
        }
        
        &::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
            border-radius: 0.25em;
        }
        
        &::-webkit-scrollbar-thumb {
            background-color: var(--font-color);
            outline: 10px solid transparent;
            border-radius: 10px;
        }

    }

    .top-navbar {
        min-height: 24px;
        // background-color: var(--border-color);
        position: absolute;
        top: 8px;
        right: 8px;
        z-index: 100;
    }

    code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
            Bitstream Vera Sans Mono, Courier New, monospace;
    }

    #theme-toggle {
        position: absolute;
        right: 12px;
        top: 12px;
        color: var(--background);
        text-shadow: 0px 1px 15px var(--font-color);
        cursor: pointer;
        transition: text-shadow 0.2s ease-in-out, color 0.2s ease-in-out;

        &:hover {
            text-shadow: 0px 1px 30px var(--font-color), 0px 1px 30px var(--font-color);
        }
    }

</style>
